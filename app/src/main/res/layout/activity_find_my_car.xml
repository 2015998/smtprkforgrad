<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/input_login_hint">

    <ImageView
        android:id="@+id/ivKKM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="124dp"
        android:layout_marginLeft="124dp"
        android:layout_marginTop="108dp"
        android:src="@drawable/kkm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/KKMSlot1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_422371"
        app:layout_constraintStart_toStartOf="@id/ivKKM"
        app:layout_constraintTop_toBottomOf="@id/ivKKM"
        tools:layout_editor_absoluteY="242dp"
        android:background="@color/mapboxGrayLight"/>

    <ImageView
        android:id="@+id/ivLogoSlot1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/ic_car"
        app:layout_constraintStart_toStartOf="@id/ivKKM"
        app:layout_constraintTop_toBottomOf="@id/ivKKM" />

    <ImageView
        android:id="@+id/KKMSlot2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="116dp"
        android:layout_marginLeft="116dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_422371"
        app:layout_constraintStart_toStartOf="@id/ivKKM"
        app:layout_constraintTop_toBottomOf="@id/ivKKM" />

    <ImageView
        android:id="@+id/ivLogoSlot2"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="132dp"
        android:layout_marginLeft="132dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/ic_car"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/ivKKM"
        app:layout_constraintTop_toBottomOf="@id/ivKKM" />

</androidx.constraintlayout.widget.ConstraintLayout>